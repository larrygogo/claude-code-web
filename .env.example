# Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Data Directory
DATA_DIR=./data/claude-web

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

