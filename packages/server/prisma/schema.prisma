generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  username     String
  passwordHash String
  role         String    @default("user")   // user | admin
  status       String    @default("active") // active | disabled
  settings     String    @default("{\"theme\":\"system\"}")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
  projects     Project[]
  plans        Plan[]

  @@map("users")
}

model Session {
  id              String    @id @default(uuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId       String?
  project         Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  title           String
  parentSessionId String?
  forkMessageIndex Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  plans           Plan[]

  @@index([userId])
  @@index([projectId])
  @@map("sessions")
}

model Project {
  id             String    @id @default(uuid())
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  path           String?
  pathHash       String?
  description    String?
  instructions   String?
  claudeMdContent String?
  lastAccessedAt DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  sessions       Session[]
  plans          Plan[]

  @@unique([userId, pathHash])
  @@index([userId])
  @@map("projects")
}

model Plan {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId String
  session   Session    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project?   @relation(fields: [projectId], references: [id], onDelete: SetNull)
  title     String
  content   String
  status    String     @default("draft")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
  @@index([sessionId])
  @@map("plans")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model ModelConfig {
  id          String   @id @default(uuid())
  name        String   @unique              // 显示名称
  provider    String                        // anthropic | openai | custom
  modelId     String                        // 实际模型 ID
  apiEndpoint String                        // API 端点
  apiKey      String                        // 加密存储
  isEnabled   Boolean  @default(true)
  isDefault   Boolean  @default(false)
  priority    Int      @default(0)
  settings    String   @default("{}")       // JSON 格式的额外设置
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("model_configs")
}
