generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  username     String
  passwordHash String
  role         String      @default("user")   // user | admin
  status       String      @default("active") // active | disabled
  settings     String      @default("{\"theme\":\"system\"}")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  sessions     Session[]
  projects     Project[]
  plans        Plan[]
  rules        UserRule[]
  skills       UserSkill[]
  mcpServers   McpServer[]

  @@map("users")
}

model Session {
  id              String    @id @default(uuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId       String?
  project         Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  title           String
  parentSessionId String?
  forkMessageIndex Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  plans           Plan[]

  @@index([userId])
  @@index([projectId])
  @@map("sessions")
}

model Project {
  id             String    @id @default(uuid())
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  path           String?
  pathHash       String?
  description    String?
  instructions   String?
  claudeMdContent String?
  lastAccessedAt DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  sessions       Session[]
  plans          Plan[]

  @@unique([userId, pathHash])
  @@index([userId])
  @@map("projects")
}

model Plan {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId String
  session   Session    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project?   @relation(fields: [projectId], references: [id], onDelete: SetNull)
  title     String
  content   String
  status    String     @default("draft")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
  @@index([sessionId])
  @@map("plans")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model ModelConfig {
  id          String   @id @default(uuid())
  name        String   @unique              // 显示名称
  provider    String                        // anthropic
  modelId     String                        // 实际模型 ID
  apiEndpoint String                        // API 端点
  apiKey      String                        // 加密存储
  isEnabled   Boolean  @default(true)
  isDefault   Boolean  @default(false)
  priority    Int      @default(0)
  settings    String   @default("{}")       // JSON 格式的额外设置
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("model_configs")
}

model UserRule {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String   // 规则名称，如 "git-workflow"
  content   String   // Markdown 内容
  enabled   Boolean  @default(true)
  priority  Int      @default(0) // 排序优先级
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId, enabled])
  @@map("user_rules")
}

model UserSkill {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String   // 命令名称，如 "my-commit"
  description String?  // 命令描述
  prompt      String   // 执行时的提示词模板
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("user_skills")
}

model McpServer {
  id        String   @id @default(uuid())
  userId    String?  // null = 全局（管理员配置）
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String   // 服务器名称
  command   String   // 启动命令
  args      String   @default("[]") // JSON 数组格式的命令参数
  env       String?  // JSON 格式的环境变量
  enabled   Boolean  @default(true)
  status    String   @default("stopped") // stopped, starting, running, error
  lastError String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("mcp_servers")
}

model SystemSetting {
  id        String   @id @default(uuid())
  key       String   @unique          // 配置键名
  value     String                    // 配置值（敏感数据加密存储）
  category  String   @default("general")  // 分类: general, features, cors
  isSecret  Boolean  @default(false)  // 是否需加密
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@map("system_settings")
}
